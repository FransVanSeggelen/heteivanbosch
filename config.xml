<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "nl.avans.aii.shine.Het Ei"
        version     = "1.0.0"
        versionCode = "100">
        
    <name>
        Het Ei
    </name>

    <description>
	    
	</description>

    <author href="http://www.heteivanbosch.tumblr.com" email="heteivanbosch@gmail.com">
        Luuk Marschalk, Boudewijn Naaijkens, Frans van Seggelen
	</author>

<!-- Preferences -->
    <preference name="permissions" value="none" />
    <preference name="orientation" value="portrait" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="false" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="ios-statusbarstyle" value="black-translucent" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="android-minSdkVersion" value="4.4.4" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="SplashScreen" value="splash" />
    <preference name="SplashScreenDelay" value="2500" />

<!-- Plug-ins -->
    <gap:plugin name="org.apache.cordova.media" />
    <gap:plugin name="org.apache.cordova.file" />
    <gap:plugin name="org.apache.cordova.file-transfer" />
    <gap:plugin name="org.apache.cordova.dialogs" />
    <gap:plugin name="org.apache.cordova.geolocation" />
    <gap:plugin name="org.apache.cordova.device-orientation" />
    <gap:plugin name="de.appplant.cordova.plugin.hidden-statusbar-overlay" />
    
<!-- Icons -->
    <icon src="icon.png" />
    <!-- Android -->
    <gap:icon src="www/res/icon/android/icon-36-ldpi.png"  gap:platform="android" gap:qualifier="ldpi" />
    <gap:icon src="www/res/icon/android/icon-48-mdpi.png"  gap:platform="android" gap:qualifier="mdpi" />
    <gap:icon src="www/res/icon/android/icon-72-hdpi.png"  gap:platform="android" gap:qualifier="hdpi" />
    <gap:icon src="www/res/icon/android/icon-96-xhdpi.png" gap:platform="android" gap:qualifier="xhdpi" />
    <!-- iOS -->
    <gap:icon src="www/res/icon/ios/icon-57.png"    gap:platform="ios" width="57"  height="57" />
    <gap:icon src="www/res/icon/ios/icon-72.png"    gap:platform="ios" width="72"  height="72" />
    <gap:icon src="www/res/icon/ios/icon-57-2x.png" gap:platform="ios" width="114" height="114" />
    <gap:icon src="www/res/icon/ios/icon-72-2x.png" gap:platform="ios" width="144" height="144" />

<!-- Splash screens -->
    <!-- Android -->
    <platform name="android">
        <splash src="www/res/screen/android/screen-ldpi-portrait.png" density="port-ldpi" />
        <splash src="www/res/screen/android/screen-mdpi-portrait.png" density="port-mdpi" />
        <splash src="www/res/screen/android/screen-hdpi-portrait.png" density="port-hdpi" />
        <splash src="www/res/screen/android/screen-xhdpi-portrait.png" density="port-xhdpi" />
    </platform>

    <!-- iOS -->
    <platform name="ios">
        <splash src="www/res/screen/ios/screen-iphone-portrait.png" width="320" height="480" />
        <splash src="www/res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
        <splash src="www/res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
    </platform>


    <gap:config-file platform="ios" parent="CFBundleShortVersionString">
        <string>100</string>
    </gap:config-file>

    <access origin="*"/>
</widget>